<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<title>‏Creta - Index</title>
    <script>
        const d = new Date();

        const nextday1 = new Date(d.getFullYear(), d.getMonth(), d.getDate()+1);

        const nextday2 = new Date(d.getFullYear(), d.getMonth(), d.getDate()+2);

        function redirectToData() {
            window.location.href = window.location.href + "/data";
        }

        function redirectToTimetable() {
            window.location.href = window.location.href + `/timetable/${nextday1.getFullYear()}-${nextday1.getMonth() + 1}-${nextday1.getDate()}/${nextday2.getFullYear()}-${nextday2.getMonth() + 1}-${nextday2.getDate()}`;
        }
    </script>

    <style>
    </style>
</head>
<body id="main-cont">
    <div class="container">
        <div class="col p-lg-3 mt-4">
            <h6>
                Bejelentkezve, mint: <%= data.nev %><br>
                Intézmény: <%= data.intezmeny %><br>
            </h6>
        </div>
        <div class="col p-lg-3 mt-4">
            <a href="JavaScript:redirectToData()"><button type="button" class="btn btn-primary w-100">Adatok</button></a>
            <br><br>
            <a href="JavaScript:redirectToTimetable()"><button type="button" class="btn btn-primary w-100">Órarend</button></a>
        </div>
        <div class="col p-lg-3 mt-1">
            <button type="button" class="btn btn-secondary w-100" id="logout">Kijelentkezés</button>
        </div>
    </div>
    <script>

        const cont = document.getElementById("main-cont");
        const logoutButton = document.getElementById("logout");

        if (localStorage.getItem("dark-mode") == "true") {
            cont.style.backgroundColor = "#262626";
            cont.style.color = "#ffffff";
        }

        logoutButton.addEventListener("click", function(e) {
            if (localStorage.getItem("instant-login") == "true") {

                localStorage.removeItem("instant-login-instid");
                localStorage.removeItem("instant-login-username");
                localStorage.removeItem("instant-login-passwd");
            }

            window.location.href = `${window.location.href.split("/")[0]}/login`;
        });
    </script>
</body>
</html>