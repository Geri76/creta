<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <title>‏Creta - Timetable</title>
</head>

<%

let table = data.table.replace("undefined", '');
let tableDone = table.substring(8);

%>

<script>
    let firstDate = new Date(`${window.location.href.split("/")[window.location.href.split("/").length-1]}`);
    let nextDate = new Date();
    nextDate.setDate(firstDate.getDate() + 1);
    let prevDate = new Date();
    prevDate.setDate(firstDate.getDate() - 1);

    let firstDateFinal = `${firstDate.getFullYear()}-${firstDate.getMonth()+1}-${firstDate.getDate()}`;
    let nextDateFinal = `${nextDate.getFullYear()}-${nextDate.getMonth()+1}-${nextDate.getDate()}`;
    let prevDateFinal = `${prevDate.getFullYear()}-${prevDate.getMonth()+1}-${prevDate.getDate()}`;

    function back() {
        let newurl = window.location.href.split("/timetable")[0];

        window.location.href = newurl;
    }

    function next() {
        let newurl = window.location.href.split("/timetable")[0] + `/timetable/${nextDateFinal}`;

        window.location.href = newurl;
    }

    function prev() {
        let newurl = window.location.href.split("/timetable")[0] + `/timetable/${prevDateFinal}`;

        window.location.href = newurl;
    }
</script>

<body id="main-cont">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <button class="btn btn-warning mt-lg-3 mb-lg-3 w-100 mt-4" onclick="prev();"><span class="material-symbols-outlined align-middle">arrow_back</span></button>
                </div>
                <div class="col">
                    <button class="btn btn-primary mt-lg-3 mb-lg-3 w-100 mt-4" onclick="back();">Vissza</button>
                </div>
                <div class="col">
                    <button class="btn btn-warning mt-lg-3 mb-lg-3 w-100 mt-4" onclick="next();"><span class="material-symbols-outlined align-middle">arrow_forward</span></button>
                </div>
            </div>
        </div>        
        <div class="container">
            <p class="text-center fw-bold fs-4 mt-3"><%- data.date %></p>
        </div>
        <table class="table table-bordered w-auto mx-auto mt-4" id="timetable">
            <thead>
                <th scope="col">Tantárgy</th>
                <th scope="col">Tanár Neve</th>
                <th scope="col">Terem</th>
            </thead>
            <tbody>
                <td><%- tableDone %></td>
            </tbody>
        </table>
    </div>
    <script>

        const cont = document.getElementById("main-cont");
        const list = document.getElementById("timetable");

        if (localStorage.getItem("dark-mode") == "true") {
            cont.style.backgroundColor = "#262626";
            cont.style.color = "#ffffff";
            list.style.color = "#ffffff";
        }
    </script>
</body>
</html>