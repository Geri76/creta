<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<title>‏Creta - Timetable</title>
</head>

<%

let table = data.table.replace("undefined", '');
let tableDone = table.substring(8);

%>

<script>
    function back() {
        let newurl = window.location.href.split("/timetable")[0];

        window.location.href = newurl;
    }
</script>

<body id="main-cont">
    <div class="container">
        <button class="btn btn-primary mt-lg-3 mb-lg-3 w-100 mt-4" onclick="back();">Vissza</button>
        <table class="table table-bordered w-auto mx-auto mt-4" id="timetable">
            <thead>
                <th scope="col">Tantárgy</th>
                <th scope="col">Tanár Neve</th>
            </thead>
            <tbody>
                <td><%- tableDone %></td>
            </tbody>
        </table>
    </div>
    <script>

        const cont = document.getElementById("main-cont");
        const list = document.getElementById("timetable");

        if (localStorage.getItem("dark-mode") == "true") {
            cont.style.backgroundColor = "#262626";
            cont.style.color = "#ffffff";
            list.style.color = "#ffffff";
        }
    </script>
</body>
</html>