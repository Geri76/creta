<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>‚ÄèCreta - Settings</title>
</head>
<body id="main-cont">
    <div class="container">
        <div class="mb-4 row">
            <div class="col">
                <span class="material-symbols-outlined fs-1 align-middle lh-sm">settings</span>
                <span class="fs-1 align-middle">Be√°ll√≠t√°sok</span>
            </div>
        </div>
        <div class="form-check form-switch mb-3 fs-5">
            <input class="form-check-input" type="checkbox" role="switch" id="dark-mode">
            <label class="form-check-label" for="dark-mode">üåô S√∂t√©t t√©ma</label>
        </div>
        <div class="form-check form-switch mb-3 fs-5">
            <input class="form-check-input" type="checkbox" role="switch" id="instant-login">
            <label class="form-check-label" for="instant-login">‚úíÔ∏è Maradjon bejelentkezve</label>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary w-100 position-absolute bottom-0 start-50 translate-middle-x fs-5 rounded-0" onclick="window.location.href = window.location.href.replace('settings', 'login')">Vissza</button>
        </div>
    </div>
    <script>
        const darkModeCheckBox = document.getElementById("dark-mode");
        const loginCheckBox = document.getElementById("instant-login");
        const cont = document.getElementById("main-cont");

        darkModeCheckBox.addEventListener("change", function(e) {
            if (this.checked) {
                localStorage.setItem("dark-mode", true);
                cont.style.backgroundColor = "#262626";
                cont.style.color = "#ffffff";
            } else {
                localStorage.removeItem("dark-mode");
                cont.style.backgroundColor = "#ffffff";
                cont.style.color = "#212529";
            }
        });

        loginCheckBox.addEventListener("change", function(e) {
            if (this.checked) {
                localStorage.setItem("instant-login", true);
            } else {
                localStorage.removeItem("instant-login");
                localStorage.removeItem("instant-login-instid");
                localStorage.removeItem("instant-login-username");
                localStorage.removeItem("instant-login-passwd");
            }
        });

        if (localStorage.getItem("dark-mode") == "true") {
            cont.style.backgroundColor = "#262626";
            cont.style.color = "#ffffff";
            darkModeCheckBox.checked = true;
        }

        if (localStorage.getItem("instant-login") == "true") {
            loginCheckBox.checked = true;
        }
    </script>
</body>
</html>