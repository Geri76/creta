<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>‏Creta - Settings</title>
</head>
<body id="main-cont">
    <div class="container">
        <div class="mb-3">
            <button class="btn btn-primary w-100 mt-4" onclick="window.location.href = window.location.href.replace('settings', 'login')">Vissza</button>
        </div>
        <h1>Beállítások</h1>
        <div class="mb-3">
            <label for="dark-mode">Dark Mode</label>
            <input type="checkbox" name="dark-mode" id="dark-mode">
        </div>
        <div class="mb-3">
            <label for="instant-login">Maradjon bejelentkezve</label>
            <input type="checkbox" name="instant-login" id="instant-login">
        </div>
    </div>
    <script>
        const darkModeCheckBox = document.getElementById("dark-mode");
        const loginCheckBox = document.getElementById("instant-login");
        const cont = document.getElementById("main-cont");

        darkModeCheckBox.addEventListener("change", function(e) {
            if (this.checked) {
                localStorage.setItem("dark-mode", true);
                cont.style.backgroundColor = "#262626";
                cont.style.color = "#ffffff";
            } else {
                localStorage.removeItem("dark-mode");
                cont.style.backgroundColor = "#ffffff";
                cont.style.color = "#212529";
            }
        });

        loginCheckBox.addEventListener("change", function(e) {
            if (this.checked) {
                localStorage.setItem("instant-login", true);
            } else {
                localStorage.removeItem("instant-login");
                localStorage.removeItem("instant-login-instid");
                localStorage.removeItem("instant-login-username");
                localStorage.removeItem("instant-login-passwd");
            }
        });

        if (localStorage.getItem("dark-mode") == "true") {
            cont.style.backgroundColor = "#262626";
            cont.style.color = "#ffffff";
            darkModeCheckBox.checked = true;
        }

        if (localStorage.getItem("instant-login") == "true") {
            loginCheckBox.checked = true;
        }
    </script>
</body>
</html>